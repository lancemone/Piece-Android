<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:orientation="vertical"
    app:divider="@drawable/line_1dp_theme_color"
    app:showDividers="middle"
    app:dividerPadding="@dimen/dp_6">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch_screen_shot_allow"
        android:text="@string/screen_shot_allow"
        android:textAppearance="@style/t16_normal" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch_fingerprint_unlock"
        android:text="@string/fingerprint_unlock"
        android:textAppearance="@style/t16_normal"/>

</androidx.appcompat.widget.LinearLayoutCompat>